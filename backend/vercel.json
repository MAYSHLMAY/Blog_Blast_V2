{
  "version": 2,
  "name": "blogBlast",
  "builds": [
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/client/dist/$1"
    }
  ]
}
